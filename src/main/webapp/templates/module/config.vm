#set( $title = "Figgo - ${domain.DomainName} - Configurações do domínio" )
#parse( "templates/layout_intern.vm" )

#@body()
    <div id="main" class="center">
		<h1>Configurações do domínio</h1>
    	<p>Preencha o formulário abaixo:</p>
        #if( $errors )
		<h3>Erros</h3>
		<ul>
    		#foreach( $error in $errors )
			<li>$error</li>
			#end
		</ul>
		#end
		<form action="/domain/module/$name" method="post">
    		<input type="hidden" name="_method" value="put" />
			#foreach( $property in $module.PropertiesKeys )
			<label for="$property">
    			$property: <input type="text" name="__$property" value="$!{module.getPropertyValue($property)}"/>
            </label><br />
			#end
    		<input type="submit" value="Salvar" />
        </form>
	</div>
#end

#scripts()