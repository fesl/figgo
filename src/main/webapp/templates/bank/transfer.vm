#set( $title = "Figgo - $!{domain.Name} - Banco - Transações" )
#parse( "templates/layout_intern.vm" )

#@head()
    <link type="text/css" href="/css/jquery-ui-1.8.16.custom.css" rel="stylesheet" />
#end

#fullHeaderDomain()

#@body()
<div class="left">
    <section id="about-intern">
        <h2>$domain.Name</h2>
        #if( $domain.AvatarKey )
        <a href="/domain/upload"><img class="avatar" src="/serve/$domain.AvatarKey" alt="Avatar do domínio" /></a>
        #else
        <a href="/domain/upload"><img class="avatar" src="http://lorempixum.com/180/180/" alt="Avatar do domínio" /></a>
        #end
        <ul class="links">
            <li><a href="#">Home</a></li>
            <li><a href="#">Sobre</a></li>
            #foreach( $module in $domain.ModulesEnabled )
                <li #if( $module == $currentModule )class="selected"#end><a href="/$module.toLowerCase()">$module</a></li>
            #end
        </ul>
    </section>
</div>
<div class="left">
    <section id="main-intern">
        <h3>Acesso rápido</h3>
        <nav>
            <ul class="bank-shortcuts">
                <li><a href="/bank">Minha conta</a></li>
                <li><a href="/bank/transfer">Trasferência</a></li>
                <li><a href="/bank/statement">Extrato</a></li>
                <li><a href="/bank/stats">Estatísticas</a></li>
            </ul>
        </nav>

        <hr />

        <h3>Transferência</h3>
        <span>Saldo atual: M$ $balance</span>

        <form action="/bank/transfer" method="post">
            <fieldset>
                <legend>Faça uma transferência</legend>
                <div>
                    <label for="userId">Usuário</label>
                    <input type="text" name="userId" class="autocomplete" />
                    #if ($invalid.userId)
                    <span>$invalid.userId</span>
                    #end
                </div>
                <div>
                    <label for="amount">Valor</label>
                    <input type="text" name="amount" />
                    #if ($invalid.amount)
                    <span>$invalid.amount</span>
                    #end
                </div>
                <div>
                    <label for="type">Tipo</label>
                    <select type="text" name="type">
                        <option value="PAYMENT">Pagamento</option>
                        <option value="TRANSFER">Transferência</option>
                    </select>
                    #if ($invalid.type)
                    <span>$invalid.type</span>
                    #end
                </div>
                <div>
                    <label for="comment">Comentário (opcional)</label>
                    <textarea name="comment"></textarea>
                </div>
                <input type="submit" value="Transferir" />
            </fieldset>
        </form>
    </section>
</div>
#end
    
#@scripts()
    <script defer src="/js/libs/jquery-ui-1.8.16.custom.min.js"></script>
#end