#set( $title = "Figgo - $!{domain.Name} - Banco - Extrato" )
#parse( "templates/layout_intern.vm" )

#header()

#@body()
    <div id="main" class="center">
		<header>
    		<h1>Nome do coletivo</h1>
    		<nav id="tabs">
        		<ul class="inline">
                    <li><a href="/">Dashboard</a></li>
                    #foreach( $module in $domain.ModulesEnabled )
						<li #if( $module == $currentModule )class="selected"#end><a href="/$module.toLowerCase()">$module</a></li>
					#end
        		</ul>
    		</nav>
		</header>
		<div id="content" class="bank">
			<div id="column-left">
                <section id="balance">
                    <h3>Extrato $month</h3>
    				<table class="simple">
                		<thead>
                    		<tr>
                    			<th>Data</th>
    							<th>Destino</th>
    							<th>Descrição</th>
    							<th>Valor</th>
                    		</tr>
                        </thead>
                		<tbody>
                        ##foreach( $transation in $account.LatestTransations )
                    		<tr>
                    			<td>transaction.Date</td>
								<td>transaction.To</td>
								<td>transaction.Description</td>
								<td>transaction.Value</td>
                    		</tr>
							<tr>
                    			<td>transaction.Date</td>
								<td>transaction.To</td>
								<td>transaction.Description</td>
								<td>transaction.Value</td>
                    		</tr>
							<tr>
                    			<td>transaction.Date</td>
								<td>transaction.To</td>
								<td>transaction.Description</td>
								<td>transaction.Value</td>
                    		</tr>
                        ##end
                        </tbody>
						<tfoot>
							<td />
							<td />
                            <td>SALDO</td>
                            <td>$account.Balance</td>
                        </tfoot>
                    </table>
    			</section>
				<hr />
			</div>
			<div id="column-right">
    			<section id="menu">
					<h3>Acesso rápido</h3>
					<aside>
    					<ul>
    						<li><a href="/bank">Minha conta</a></li>
                            <li><a href="/bank/transfer">Trasferência</a></li>
    						<li><a href="/bank/statement">Extrato</a></li>
    						<li><a href="/bank/other">Outras consultas</a></li>
                        </ul>
					</aside>
				</section>
            </div>
		</div>
	</div>
#end
	
#scripts()