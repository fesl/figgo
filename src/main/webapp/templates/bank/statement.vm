#set( $title = "Figgo - $!{domain.Name} - Banco - Extrato" )
#parse( "templates/layout_intern.vm" )

#@head()
    <link rel="stylesheet" href="/css/jquery-ui-1.8.16.custom.css">
#end

#fullHeaderDomain()

#@body()
<div class="left">
    <section id="about-intern">
        <h2>$domain.Name</h2>
        #if( $domain.AvatarKey )
        <a href="/domain/upload"><img class="avatar" src="/serve/$domain.AvatarKey" alt="Avatar do domínio" /></a>
        #else
        <a href="/domain/upload"><img class="avatar" src="http://lorempixum.com/180/180/" alt="Avatar do domínio" /></a>
        #end
        <ul class="links">
            <li><a href="#">Home</a></li>
            <li><a href="#">Sobre</a></li>
            #foreach( $module in $domain.ModulesEnabled )
                <li #if( $module == $currentModule )class="selected"#end><a href="/$module.toLowerCase()">$module</a></li>
            #end
        </ul>
    </section>
</div>
<div class="left">
    <section id="main-intern">
        <h3>Acesso rápido</h3>
        <nav>
            <ul class="bank-shortcuts">
                <li><a href="/bank">Minha conta</a></li>
                <li><a href="/bank/transfer">Trasferência</a></li>
                <li><a href="/bank/statement">Extrato</a></li>
                <li><a href="/bank/other">Outras consultas</a></li>
            </ul>
        </nav>

        <hr />

        <h3>Extrato</h3>
        <form id="statement-form" action="/bank/statement" method="post">
            <fieldset>
                <legend>Selecione um intervalo</legend>
                <div>
                    <label for="startDate">Início</label>
                    <input type="text" id="startDate" name="startDate" />
                </div>
                <div>
                    <label for="endDate">Fim</label>
                    <input type="text" id="endDate" name="endDate" />
                </div>
                <input type="submit" value="Visualizar" />
            </fieldset>
        </form>
        <table class="bank hidden">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Destino</th>
                    <th>Comentário</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tfoot>
                <td colspan="3" class="balance">SALDO</td>
                <td class=#if( $balance >= 0 )"blue"#else"red"#end>M$ $formatter. format($balance)</td>
            </tfoot>
            <tbody>
            </tbody>
        </table>
    </section>
</div>
#end
    
#@scripts()
    <script src="/js/libs/jquery-ui-1.8.16.custom.min.js"></script>
    <script src="/js/bank.js"></script>
#end