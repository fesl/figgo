#set( $title = "Figgo - $!{domain.Name} - Banco" )
#set( $currentModule = "BANK" )
#parse( "templates/layout_intern.vm" )

#@body()
    <div id="main" class="center">
		<header>
    		<h1>$domain.Name</h1>
    		<nav id="tabs">
        		<ul class="inline">
                    <li><a href="/">Dashboard</a></li>
                    #foreach( $module in $domain.ModulesEnabled )
						<li #if( $module == $currentModule )class="selected"#end><a href="/$module.toLowerCase()">$module</a></li>
					#end
        		</ul>
    		</nav>
		</header>
		<div id="content">
			<div id="column-left" class="bank">
                <section id="balance">
                    <h3>Minha conta</h3>
    				<table class="simple">
                		<thead>
                    		<tr>
                    			<th>Data</th>
    							<th>Destino</th>
    							<th>Comentário</th>
    							<th>Valor</th>
                    		</tr>
                        </thead>
                		<tbody>
						#if( $transactions.size() > 0 )
    						#foreach( $transaction in $transactions )
                    		<tr>
                    			<td>$formatter.format($transaction.Date)</td>
    							<td>$transaction.AccountDest</td>
    							<td>$transaction.Comment</td>
    							<td class=#if( $transaction.AccountDest == $user.Email )"blue">#else"red">-#end$formatter.format($transaction.Amount)</td>
                    		</tr>
    						#end
						#else
							<tr><td>Nenhuma transação até o momento.</td></tr>
						#end
                        </tbody>
						<tfoot>
							<td />
							<td />
                            <td>SALDO</td>
                            <td class=#if( $balance >= 0 )"blue"#else"red"#end>M$ $formatter.format($balance)</td>
                        </tfoot>
                    </table>
    			</section>
				<hr />
			</div>
			<div id="column-right">
    			<section id="menu">
					<h3>Acesso rápido</h3>
					<aside>
    					<ul>
    						<li><a href="/bank">Minha conta</a></li>
                            <li><a href="/bank/transfer">Trasferência</a></li>
    						<li><a href="/bank/statement">Extrato</a></li>
    						<li><a href="/bank/other">Outras consultas</a></li>
                        </ul>
					</aside>
				</section>
            </div>
		</div>
	</div>
#end
	
#scripts()