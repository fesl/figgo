#set( $title = "Figgo - $!{domain.Name} - Serviços" )
#set( $currentModule = "SERVICES" )
#parse( "templates/layout_intern.vm" )

#head()

#fullHeaderDomain()

#@body()
<div class="left">
    <section id="about-intern">
        <h2>$domain.Name</h2>
        #if( $domain.AvatarKey )
        <a href="/domain/upload"><img class="avatar" src="/serve/$domain.AvatarKey" alt="Avatar do domínio" /></a>
        #else
        <a href="/domain/upload"><img class="avatar" src="http://lorempixum.com/180/180/" alt="Avatar do domínio" /></a>
        #end
        <ul class="links">
            <li><a href="#">Home</a></li>
            <li><a href="#">Sobre</a></li>
            #foreach( $module in $domain.ModulesEnabled )
                <li #if( $module == $currentModule )class="selected"#end><a href="/$module.toLowerCase()">$module</a></li>
            #end
        </ul>
    </section>
</div>
<div class="left">
    <section id="main-intern">
        <h2>Status de contrato</h2>
        <form action="/services/contract/$contract.Id/edit" method="post" accept-charset="utf-8">
            <fieldset>
                <legend>Como está o seu serviço?</legend>
                <p>$contract.service.name</p>
                <div>
                    <label for="status">Status</label>
                    <select name="status">
                        <option value="PENDING" #if($contract.status == "PENDING")selected#end>Pendente</option>
                        <option value="IN_PROGRESS" #if($contract.status == "IN_PROGRESS")selected#end>Em andamento</option>
                        <option value="COMPLETED" #if($contract.status == "COMPLETED")selected#end>Completo</option>
                    </select>
                </div>
            </fieldset>
            <input type="submit" value="Atualizar" />
        </form>
    </section>
</div>
#end
    
#scripts()