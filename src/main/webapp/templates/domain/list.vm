#set( $title = "Figgo - Domínios" )
#parse( "templates/layout_intern.vm" )

#header()

#@body()
	<div id="main" class="center">
		<header>
    		<h1>Lista de domínios</h1>
		</header>
		<div id="content">
			<div id="single-column" class="domain">
                <section id="domains">
					<input type="text" id="domain-search" placeholder="Buscar domínio" />
					<table class="simple">
                		<thead>
                    		<tr>
                    			<th></th>
								<th>Nome</th>
                    			<th>Domínio</th>
                    		</tr>
                        </thead>
                		<tbody>
                        #foreach( $domain in $domains )
                    		<tr>
                    			#if( $domain.AvatarKey )
								<td><img src="$domain.AvatarKey" alt="Avatar do $domain.Name" title="Avatar do $domain.Name"/></td>
								#else
								<td><img src="/img/blank.jpg" alt="Avatar do $domain.Name" title="Avatar do $domain.Name" /></td>
								#end
								<td>$domain.Name</td>
                    			<td>${domain.DomainName}.figgo.com.br</td>
                    		</tr>
                        #end
                        </tbody>
                    </table>
                </section>
            </div>
		</div>
	</div>
#end

#@scripts()
	<script type="text/javascript" src="/js/libs/jquery.uitablefilter.js"></script>
#end