#set( $title = "Figgo - $!{domain.Name}" )
#parse( "templates/layout.vm" )

#@body()
    <div id="main" class="center">
		<header>
			<nav id="tabs">
        		<ul class="inline">
                    <li class="selected"><a href="/">Dashboard</a></li>
                    #foreach( $module in $domain.ModulesEnabled )
						<li><a href="/$module.toLowerCase()">$module</a></li>
					#end
        		</ul>
			</nav>
		</header>
		<div id="content" class="domain">
			<div id="column-left">
				#if( $domain.AvatarKey )
				<a href="/domain/upload"><img id="avatar" src="/blob/$domain.AvatarKey" alt="Avatar do domínio" /></a>
				#else
				<a href="/domain/upload"><img id="avatar" src="http://lorempixum.com/100/100/" alt="Avatar do domínio" /></a>
				#end
                <section id="about">
    				<h2>$domain.Name</h2>
    				<small>$domain.Url</small><br />
    				<small>$domain.MailList</small>
					<p>$domain.Description</p>
    			</section>
				<hr />
			</div>
			<div id="column-right">
    			<section id="notifications">
					<h3>Notificações</h3>
					<ul>
						<li>Notificação 1</li>
                        <li>Notificação 2</li>
                    </ul>
				</section>
            </div>
		</div>
	</div>
#end
	
#scripts()