#set( $title = "Figgo - Novo domínio" )
#parse( "templates/layout_intern.vm" )

#@body()
    <div id="main" class="center">
		<header>
			<h1>Novo domínio</h1>
		</header>
		<div id="content">
			<div id="single-column">
				<p>Preencha o formulário abaixo:</p>
        		#if ( $error )
    			<p class="warning"> Error: domínio $error já existe!</p>				
        		#end
        		<form action="/admin/domain/create" method="post">
                	<label for="name">
                		Domínio: <input type="text" name="name" /> .figgo.com.br
                	</label><br />
            		<label for="name">
                		Administrador: <input type="text" name="userId" />
                	</label><br />
            		<input type="submit" value="Criar" />
                </form>
			</div>
		</div>
	</div>
#end

#scripts()