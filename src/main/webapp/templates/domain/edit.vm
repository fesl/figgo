#set( $title = "Figgo - ${domain.DomainName} - Configurações do domínio" )
#parse( "templates/layout.vm" )

#@body()
	<a href="$logout_url">logout</a>
	
    <div id="main" class="center">
		<h1>Configurações do domínio</h1>
    	<p>Preencha o formulário abaixo:</p>
        <form action="/domain/update" method="post">
    		<input type="hidden" name="_method" value="put" />
    		Domínio: ${domain.DomainName}.figgo.com.br <br />
    		<label for="name">
    			Nome: <small>(e.g.: Coletivo Mundo)</small> <input type="text" name="name" value="$!{name}"/>
            </label><br />
			<label for="url">
    			Site: </small> <input type="text" name="url" value="$!{url}"/>
            </label><br />
			<label for="maillist">
    			Lista de discussão: </small> <input type="text" name="maillist" value="$!{maillist}"/>
            </label><br />
			<label for="description">
        		Descrição: <textarea name="description">$!{description}</textarea>
        	</label><br />
    		<input type="submit" value="Salvar" />
        </form>
	</div>
#end

#scripts()