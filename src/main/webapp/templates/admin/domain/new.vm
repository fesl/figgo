#set( $title = "Figgo - Novo domínio" )
#parse( "templates/layout_intern.vm" )

#header()

#@body()
    <div id="main" class="center">
		<header>
			<h1>Novo domínio</h1>
		</header>
		<div id="content">
			<div id="single-column">
				<p>Preencha o formulário abaixo:</p>
        		<form action="/domain/new" method="post">
                	<label for="name">
                		Domínio: <input type="text" name="name" value="$!{name}" /> .figgo.com.br
						#if ( $invalid.name )
    						<span>$invalid.name</span>
						#end
                	</label><br />
            		<label for="name">
                		Administrador: <input type="text" name="userId" value="$!{userId}" />
                	</label><br />
            		<input type="submit" value="Criar" />
                </form>
			</div>
		</div>
	</div>
#end

#scripts()