#header()

#@body()
	<div id="main" class="center">
		<header>
			<h1>Configuração inicial (Route53)</h1>
		</header>
		<div id="content">
			<div id="single-column">
				<p>Preencha o formulário abaixo:</p>
        		<form action="/admin/app/config" method="post">
                	<label for="name">
                		Access Key ID: <input type="text" name="accessKey" value="$!{accessKey}" />
                	</label><br />
        			<label for="name">
                		Access Key Secret: <input type="text" name="keySecret" value="$!{keySecret}" />
                	</label><br />
            		<label for="name">
                		Zone ID: <input type="text" name="zone" value="$!{zone}" />
                	</label><br />
            		<input type="submit" value="Salvar" />
                </form>
			</div>
		</div>
	</div>
#end

#scripts()