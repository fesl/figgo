#set( $title = "Figgo - Início" )
#parse( "templates/layout_intern.vm" )

#header()

#@body()
	<div id="main" class="center">
		<header>
			<h1>Novo usuário</h1>
		</header>
		<div id="content">
			<div id="single-column">
				<p>Olá, $email!</p>
				<p>Você ainda não possui cadastro no Figgo. Faça já o seu!</p>

        		<p>Preencha o formulário abaixo:</p>
                <form action="/create" method="post">
                	$invalid.entrySet()
					<label for="name">
                		Nome: <input type="text" name="name" value="$!{name}" required />
                		#if ($invalid.name)
                			$invalid["name"]
                		#end
                	</label><br />
                	<label for="phoneNumber">
                	    Telefone: <small>(formato: 83 9999 9999)</small> <input type="text" name="phoneNumber" value="$!{phoneNumber}" pattern="^(([0-9]{2}|\\([0-9]{2}\\))[ ])?[0-9]{4}[-. ]?[0-9]{4}$" required />
                	    #if ($invalid && $invalid["phoneNumber"])
                			$invalid["phoneNumber"]
                		#end
                	</label><br />
                	<label for="description">
                		Descrição: <textarea name="description">$!{description}</textarea>
                	</label><br />
            		<input type="submit" value="Cadastrar" />
                </form>
			</div>
		</div>
	</div>
#end

#scripts()