<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
	PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<servlet>
	  <servlet-name>bankFacadeImpl</servlet-name>
	  <servlet-class>
	    br.octahedron.straight.gwt.server.BankFacadeImpl
	  </servlet-class>
	</servlet>
	<servlet-mapping>
	  <servlet-name>bankFacadeImpl</servlet-name>
	  <url-pattern>/br.octahedron.straight.client.Straight/bank</url-pattern>
	</servlet-mapping>
	
	<listener>
		<listener-class>
			br.octahedron.straight.gwt.server.Bootstrap
	    </listener-class>
	</listener>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>Straight.html</welcome-file>
	</welcome-file-list>

</web-app>
