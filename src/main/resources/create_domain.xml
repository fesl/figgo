<?xml version="1.0" encoding="UTF-8"?>
<ChangeResourceRecordSetsRequest xmlns="https://route53.amazonaws.com/doc/2011-05-05/">
   <ChangeBatch>
      <Comment>
        Sub-domain: {domain}
      </Comment>
      <Changes>
         <Change>
            <Action>CREATE</Action>
            <ResourceRecordSet>
               <Name>{domain}.</Name>
               <Type>CNAME</Type>
               <TTL>600</TTL>
               <ResourceRecords>
                  <ResourceRecord>
                     <Value>ghs.google.com</Value>
                  </ResourceRecord>
               </ResourceRecords>
            </ResourceRecordSet>
  		 </Change>
	  </Changes>
   </ChangeBatch>
</ChangeResourceRecordSetsRequest>